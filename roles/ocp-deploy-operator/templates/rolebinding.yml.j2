apiVersion: rbac.authorization.k8s.io/v1
kind: {{ operator.rbac.role.kind }}Binding
metadata:
  name: {{ operator.rbac.role.name }}
{% if operator.rbac.role.kind == "Role" %}
  namespace: {{ operator.namespace }}
{% endif %}
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: {{ operator.rbac.role.kind }}
  name: {{ operator.rbac.role.name }}
subjects:
- kind: {{ operator.rbac.rolebinding_subject.kind }}
  name: {{ operator.rbac.rolebinding_subject.name }}
{% if operator.rbac.role.kind == "Role" %}
namespace: {{ operator.namespace }}
{% endif %}